
--MD folder klasör oluşturma
SELECT DISTINCT D.DOSYA_OLUS FROM (

SELECT     D.DOSYA_KODU, D.ADI, D.DOSYA_YOLU, D.ILGILITABLO, D.ILGILITABLO_VERIKODU, yk.PARSEL_ID, D.CONTENT_TYPE, D.CONTENT_LENGTH,

                      D.FILE_TYPE, D.FILE_NAME, CONCAT('MD F:\netcadweb\Netigma\Ekler\Dosyalar\YAPI_KULL\', D.ILGILITABLO_VERIKODU) AS DOSYA_OLUS

FROM         DOSYALAR AS D INNER JOIN

                      YAPI_KULL_IZIN_BELGESI AS yk ON D.ILGILITABLO_VERIKODU = yk.PARSEL_ID

WHERE     (D.ILGILITABLO = 'YAPI_KULL_IZIN_BELGESI') ) AS D

-- COPY dosya  renameli kopyalama
SELECT  CONCAT('COPY D:\netcadweb\belnet\Ekler\Dosyalar\YAPI_KULL_IZIN_BELGESI_ARSIV__\',P.YAPI_KULL_IZIN_BELG_ID,'\',D.DOSYA_KODU,D.FILE_TYPE ,' D:\netcadweb\belnet\Ekler\Dosyalar\YAPI_KULL_IZIN_BELGESI_ARSIV\', D.ILGILITABLO_VERIKODU,'\',DOSYA_KODU,FILE_TYPE) ,
   D.DOSYA_KODU, D.ADI, D.DOSYA_YOLU, D.ILGILITABLO, D.ILGILITABLO_VERIKODU, P.YAPI_KULL_IZIN_BELG_ID,  D.CONTENT_TYPE, D.CONTENT_LENGTH, 
                      D.FILE_TYPE, D.FILE_NAME, CONCAT('MD E:\netcadweb\belnet\Ekler\Dosyalar\PARSEL\', D.ILGILITABLO_VERIKODU) AS DOSYA_OLUS
FROM         DOSYALAR AS D INNER JOIN
                      YAPI_KULL_IZIN_BELGESI AS P ON D.ILGILITABLO_VERIKODU = P.YAPI_KULL_IZIN_BELG_ID
WHERE     (D.ILGILITABLO = 'YAPI_KULL_IZIN_BELGESI') --AND D.ILGILITABLO_VERIKODU=2 and d.dosya_kodu=30754
ORDER BY D.DOSYA_KODU
